<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Moda_Praia</title>
    <link rel="stylesheet" href="/css/output.css" asp-append-version="true" />

</head>
<body>
    <div class="grid mt-0 grid-cols-[1fr_6fr] w-screen mx-auto bg-gray-100">

        <div class="h-screen flex flex-col bg-blue-400 px-4 row-span-2">
            <h1 class="py-2 mb-2 border-b-[1px] border-white text-white text-lg font-semibold"> <a class="uppercase" href="#">Moda Praia</a></h1>

            <div class="flex flex-col flex-grow space-y-2 border-b-[1px] border-white">
                <div class=" hover:bg-blue-300 hover:rounded-md"><a class="text-white text-base font-semibold" href="#">Dashboard</a></div>
                <div class=" hover:bg-blue-300 hover:rounded-md"><a class="text-white text-base font-semibold" href="#">Prudutos</a></div>
                <div class=" hover:bg-blue-300 hover:rounded-md"><a class="text-white text-base font-semibold" href="#">Pedidos</a></div>
                <div class=" hover:bg-blue-300 hover:rounded-md"><a class="text-white text-base font-semibold" href="#">Estoque</a></div>
                <div class=" hover:bg-blue-300 hover:rounded-md"><a class="text-white text-base font-semibold" href="#">Faturamento</a></div>
                <div class=" hover:bg-blue-300 hover:rounded-md"><a class="text-white text-base font-semibold" href="#">Configurações</a></div>

            </div>
            <div class="inline-block py-2 "><div class=" inline-block "><a class="text-white text-base font-semibold" href="#">Sair</a></div></div>

        </div>

        <div class="flex flex-col h-screen">
            <div class="flex justify-between h-min py-2 mb-2 border-b-[1.5px] border-gray-200  pt-2 mx-4 ">
                <div>
                    <h1 class="border-black text-xl font-medium capitalize">Produtos</h1>
                </div>

                <div class="flex space-x-4">
                    <div><input type="text" placeholder="Buscar" class="rounded-full border-[0.8px] placeholder:outline-none pl-4"></div>
                    <div><a href="#" class="rounded-full size-1 bg-blue-100 p-2">N</a></div>
                    <div><a href="#" class="rounded-full bg-blue-100 p-2">ADM</a></div>
                </div>

            </div>

            @RenderBody()

        </div>    
        
        </div>


        <script src="~/js/style.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
