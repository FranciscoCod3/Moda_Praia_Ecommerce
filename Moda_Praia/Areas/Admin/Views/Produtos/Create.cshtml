@model Moda_Praia.Areas.Admin.Models.ProdutoViewModel


@{
    ViewData["Title"] = "Adicionar Novo Produto";
    Layout = "_Layout_Cadastro";
}

<div class="w-[900px] mx-auto">
    <h1 class="ml-2 text-2xl mb-4">Adicionar Novo Produto</h1>
    
    <form class="grid grid-cols-2 gap-1 border-2 border-solid bg-gray-50 rounded-md" asp-action="Create" method="post" enctype="multipart/form-data">
            
        <div class="mx-2 flex flex-col mt-2">
            <label asp-for="Nome" class="mb-1"></label>
            <input asp-for="Nome" class="border-[0.25px] w-64 rounded-md border-solid border-black" />
            <span asp-validation-for="Nome" class="text-base text-red-500 h-[1em]"></span>
        </div>


        
        <div class="mx-2 flex flex-col mt-2 ">
            <label asp-for="PrecoVenda" class="mb-1"></label>
            <input asp-for="PrecoVenda" type="number" step="0.01" class="border-[0.25px] w-48 rounded-md border-solid border-black" />
            <span asp-validation-for="PrecoVenda" class="text-base text-red-500 h-[1em]"></span>
        </div>

        <div class="mx-2 flex flex-col mt-2 ">
            <label asp-for="PrecoCusto" class="mb-1"></label>
            <input asp-for="PrecoCusto" type="number" step="0.01" class="border-[0.25px] w-48 rounded-md border-solid border-black" />
            <span asp-validation-for="PrecoCusto" class="text-base text-red-500 h-[1em]"></span>
        </div>
       

        <div class="mx-2 flex flex-col mt-2">
            <label asp-for="CorBase" class="mb-1"></label>
            <input asp-for="CorBase" class="border-[0.25px] w-48 rounded-md border-solid border-black" />
            <span asp-validation-for="CorBase" class="text-base text-red-500 h-[1em]"></span>
        </div>
        

        <div class="mx-2 flex flex-col mt-2">
            <label asp-for="CategoriaId" class="mb-1"></label>
                <select asp-for="CategoriaId" class="border-[0.25px] w-48 rounded-md border-solid border-black">
                    <option value="">-- Selecione uma Categoria --</option>
                    @if (Model.CategoriasDisponiveis != null)
                    {
                        foreach (var categoria in Model.CategoriasDisponiveis)
                        {
                            <option value="@categoria.Id">@categoria.Nome</option>
                        }
                    }
                </select>
            <span asp-validation-for="CategoriaId" class="text-base text-red-500 h-[1em]"></span>
        </div>

        <div class="mx-2 flex flex-col mt-2">
        <label>Tamanhos Disponíveis:</label><br />
            @if (Model.TamanhosDisponiveisParaSelecao != null)
            {
                for (int i = 0; i < Model.TamanhosDisponiveisParaSelecao.Count; i++)
                {
                    var tamanho = Model.TamanhosDisponiveisParaSelecao[i];
                    <div>
                        <input type="checkbox" id="tamanho_@tamanho.Id" name="TamanhosSelecionados[@i].TamanhoId" value="@tamanho.Id" />
                        <label for="tamanho_@tamanho.Id">@tamanho.Name</label>
                        <input type="number" name="TamanhosSelecionados[@i].Quantidade" placeholder="Estoque para @tamanho.Name" />
                    </div>
                }
            }
            <span asp-validation-for="TamanhosSelecionados" class="text-danger"></span>
        </div>
       
       

        <div class="mx-2 flex flex-col mt-2">
            <label asp-for="Descricao" class="mb-1"></label>
            <textarea asp-for="Descricao" class="border-[0.25px] max-w-6xl h-32 rounded-md border-solid border-black"></textarea>
            <span asp-validation-for="Descricao" class="text-base text-red-500 h-[1em]"></span>
        </div>

        <div>
            <h2 class="mx-2">Fotos</h2>
            <div class="mx-2 flex flex-col mt-2">
                <label  class="mb-1"></label>
                <input type="file" asp-for="ImagensRoupa" />
                <span asp-validation-for="ImagensRoupa" class="text-base text-red-500 h-[1em]"></span>
            </div>

            <div class="mx-2 flex flex-col mt-2">
                <label class="mb-1"></label>
                <input type="file" asp-for="ImagensRoupa" />
                <span asp-validation-for="ImagensRoupa" class="text-base text-red-500 h-[1em]"></span>
            </div>


            <div class="mx-2 flex flex-col mt-2">
                <label  class="mb-1"></label>
                <input type="file" asp-for="ImagensRoupa" />
                <span asp-validation-for="ImagensRoupa" class="text-base text-red-500 h-[1em]"></span>
            </div>
        </div>
        

        <div class="ml-2 mt-4 col-start-2 flex justify-end items-center gap-2 mr-2 mb-2">

            <div >
                <a class=" text-blue-800" asp-action="Index">Voltar para a Lista</a>
            </div>

            <div >
                <button class="px-2 font-[500]  py-2 uppercase bg-green-400 border-[0.25px] border-solid border-gray-400 text-black rounded-md" type="submit">Criar Produto</button>
            </div>
        </div>
        

    </form>
    
</div>
    
   



